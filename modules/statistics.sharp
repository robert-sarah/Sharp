# Statistics Module
def mean(numbers):
    if len(numbers) == 0:
        0
    else:
        sum(numbers) / len(numbers)

def median(numbers):
    sorted_nums = sorted(numbers)
    n = len(sorted_nums)
    if n % 2 == 0:
        (sorted_nums[n / 2 - 1] + sorted_nums[n / 2]) / 2
    else:
        sorted_nums[n / 2]

