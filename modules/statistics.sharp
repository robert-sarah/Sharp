def variance(numbers):
    m = mean(numbers)
    squared_diffs = []
    for num in numbers:
        squared_diffs = squared_diffs + [(num - m) * (num - m)]
    mean(squared_diffs)

def standard_deviation(numbers):
    sqrt(variance(numbers))

def range_stats(numbers):
    max(numbers) - min(numbers)
