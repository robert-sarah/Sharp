# Productivity Timer Application
# A Pomodoro-style timer built with Sharp and PyQt5

import pyqt5_wrapper as gui

# Create timer window
timer_app = gui.create_window("Sharp Productivity Timer", 500, 450)

# Title
timer_app.add_label("title", "â±ï¸ Productivity Timer")
timer_app.add_label("subtitle", "Focus Management Tool - Pomodoro Technique")

# Timer settings
timer_app.add_label("work_label", "Work Duration (minutes):")
timer_app.add_textbox("work_input", "25")

timer_app.add_label("break_label", "Break Duration (minutes):")
timer_app.add_textbox("break_input", "5")

# Statistics display
timer_app.add_label("stats_label", "Session Statistics:")
timer_app.add_textarea("stats_display", "Sessions completed: 0\nTotal work time: 0 minutes\nTotal break time: 0 minutes\n")

# Status
timer_app.add_label("status_label", "Status:")
timer_app.add_textbox("status", "Ready to start")

# Control buttons
def start_work_session():
    work_mins = timer_app.get_text("work_input")
    timer_app.set_text("status", "ğŸ”´ Work Session Active - " + work_mins + " minutes")

def start_break_session():
    break_mins = timer_app.get_text("break_input")
    timer_app.set_text("status", "ğŸŸ¢ Break Time - " + break_mins + " minutes")

def reset_timer():
    timer_app.set_text("status", "Ready to start")
    timer_app.set_text("stats_display", "Sessions completed: 0\nTotal work time: 0 minutes\nTotal break time: 0 minutes\n")

timer_app.add_button("start_work", "â–¶ï¸ Start Work", start_work_session)
timer_app.add_button("start_break", "ğŸŸ¢ Start Break", start_break_session)
timer_app.add_button("reset_btn", "ğŸ”„ Reset", reset_timer)

# Show
timer_app.show()

print("â±ï¸ Productivity Timer Started!")
print("Features:")
print("  - Customizable work and break durations")
print("  - Session tracking")
print("  - Clean, focused interface")
print("  - Perfect for Pomodoro technique")
